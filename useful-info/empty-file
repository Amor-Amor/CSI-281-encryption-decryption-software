    "def encryptLetter(letter):\n",
    "    try:\n",
    "        return key[letter]\n",
    "    except:\n",
    "        return None"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 7,
   "metadata": {},
   "outputs": [],
   "source": [
    "def decryptLetter(code):\n",
    "    for i in key:\n",
    "        if key[i] == code:\n",
    "            return i"
   ]
  },
